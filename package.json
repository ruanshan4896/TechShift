{
  "name": "tech-news-monorepo",
  "private": true,
  "scripts": {
    "dev": "pnpm --parallel --filter \"./apps/*\" dev",
    "dev:website": "pnpm --filter website dev",
    "dev:admin": "pnpm --filter admin dev",
    "build": "pnpm --filter \"./apps/*\" build",
    "build:website": "pnpm --filter website build",
    "build:admin": "pnpm --filter admin build",
    "lint": "pnpm --filter \"./apps/*\" lint",
    "seed": "pnpm --filter website seed",
    "seed:rss": "pnpm --filter website seed:rss",
    "seed:categories": "pnpm --filter website seed:categories"
  }
}
